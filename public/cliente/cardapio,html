<!doctype html>
<html lang="pt-BR">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Cardápio</title>
  <style>
    body { font-family: system-ui, Arial; margin: 24px; }
    h1 { margin-bottom: 8px; }
    .grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(220px, 1fr)); gap: 16px; }
    .item { border: 1px solid #e5e5e5; border-radius: 12px; padding: 12px; }
    .img { width: 100%; height: 140px; object-fit: cover; border-radius: 8px; border: 1px solid #ddd; }
    .name { font-weight: 700; margin: 8px 0 4px; }
    .price { color: #444; margin-bottom: 8px; }
    button { width: 100%; padding: 10px; border-radius: 10px; border: 1px solid #111; background: #111; color: #fff; cursor: pointer; }
    .toolbar { display:flex; justify-content: space-between; align-items:center; margin-bottom: 12px; }
    a { color:#0a58ca; text-decoration:none; }
  </style>
</head>
<body>
  <div class="toolbar">
    <h1>Cardápio</h1>
    <a href="/carrinho">Ver carrinho</a>
  </div>
  <div id="grid" class="grid"></div>

  <script>
    const centsToMoney = c => 'R$ ' + (c/100).toFixed(2).replace('.', ',');

    function addToCart(item){
      const cart = JSON.parse(localStorage.getItem('pitombo_cart') || '[]');
      const exists = cart.find(i => i.id === item.id);
      if (exists) { exists.qtd += 1; }
      else { cart.push({ id:item.id, name:item.name, price_cents:item.price_cents, image_url:item.image_url, qtd:1 }); }
      localStorage.setItem('pitombo_cart', JSON.stringify(cart));
      alert('Adicionado ao carrinho!');
    }

    function render(items){
      const grid = document.getElementById('grid');
      grid.innerHTML = '';
      if(!items.length){
        grid.innerHTML = '<p>Sem itens no cardápio ainda.</p>';
        return;
      }
      items.forEach(it => {
        const div = document.createElement('div');
        div.className = 'item';
        div.innerHTML = `
          <img class="img" src="${it.image_url || ''}" alt="">
          <div class="name">${it.name}</div>
          <div class="price">${centsToMoney(it.price_cents || 0)}</div>
          <button>Adicionar</button>
        `;
        div.querySelector('button').onclick = () => addToCart(it);
        grid.appendChild(div);
      });
    }

    async function load(){
      try {
        const r = await fetch('/api/menu');
        const data = await r.json();
        render(data);
      } catch(e){
        console.error(e);
        render([]);
      }
    }

    load();
  </script>
</body>
</html>
