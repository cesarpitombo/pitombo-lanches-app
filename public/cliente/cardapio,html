<body>
  <h1>üçü Card√°pio Pitombo Lanches</h1>
  <div class="produtos" id="produtos"></div>

  <script>
    const produtosEl = document.getElementById("produtos");

    async function carregarProdutos() {
      const resposta = await fetch("/data/menu.json");
      const produtos = await resposta.json();
      produtosEl.innerHTML = produtos.map(p => `
        <div class="card">
          <h3>${p.nome}</h3>
          <p>R$ ${p.preco.toFixed(2)}</p>
          <button onclick="addCarrinho('${p.nome}', ${p.preco})">Adicionar</button>
        </div>
      `).join("");
    }

    function addCarrinho(nome, preco) {
      let cart = JSON.parse(localStorage.getItem("carrinho")) || [];
      cart.push({ nome, preco });
      localStorage.setItem("carrinho", JSON.stringify(cart));
      alert(`${nome} adicionado ao carrinho!`);
    }

    carregarProdutos();
  </script>
</body>
