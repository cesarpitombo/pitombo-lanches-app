  <title>Card√°pio ‚Ä¢ Pitombo Lanches</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <h1>üçî Card√°pio Pitombo Lanches</h1>

    <div id="grid" class="grid"></div>

    <p style="text-align:center; margin-top:20px;">
      <a class="btn" href="/cliente/carrinho.html">Ver Carrinho</a>
      <a class="btn btn-secondary" href="/">In√≠cio</a>
    </p>
  </div>

  <script>
    // carrega /data/menu.json e monta a grade
    async function load(){
      const res = await fetch('/data/menu.json', {cache:'no-store'});
      const items = await res.json();
      const el = document.getElementById('grid');
      el.innerHTML = items.map(i => `
        <div class="item">
          <h3>${i.nome}</h3>
          <p>${(i.preco).toLocaleString('pt-BR',{style:'currency',currency:'BRL'})}</p>
          <button class="btn" onclick='add(${JSON.stringify(i)})'>Adicionar</button>
        </div>
      `).join('');
    }
    const CART_KEY='pitombo_cart';
    function getCart(){ return JSON.parse(localStorage.getItem(CART_KEY)||'[]'); }
    function setCart(v){ localStorage.setItem(CART_KEY, JSON.stringify(v)); }
    function add(prod){
      const cart = getCart();
      const idx = cart.findIndex(x=>x.id===prod.id);
      if(idx>=0) cart[idx].qtd += 1; else cart.push({...prod,qtd:1});
      setCart(cart);
      alert('Adicionado ao carrinho!');
    }
    load();
  </script>
</body>
