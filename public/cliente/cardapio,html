<body>
  <header>
    <h2>üçü Card√°pio Pitombo Lanches</h2>
    <div>
      <button class="top-btn" onclick="location.href='/'">In√≠cio</button>
      <button class="top-btn" onclick="location.href='/carrinho'">Ver Carrinho</button>
    </div>
  </header>

  <div class="produtos" id="produtos"></div>

  <script>
    const produtosEl = document.getElementById("produtos");

    async function carregarProdutos() {
      const resp = await fetch("/data/menu.json");
      const produtos = await resp.json();
      produtosEl.innerHTML = produtos.map(p => `
        <div class="card">
          <h3>${p.nome}</h3>
          <div class="preco">R$ ${Number(p.preco).toFixed(2)}</div>
          <button onclick="addCarrinho('${p.nome}', ${Number(p.preco)})">Adicionar</button>
        </div>
      `).join("");
    }

    function addCarrinho(nome, preco) {
      const key = "carrinho";
      let cart = JSON.parse(localStorage.getItem(key)) || [];
      cart.push({ nome, preco });
      localStorage.setItem(key, JSON.stringify(cart));
      alert(`${nome} adicionado ao carrinho!`);
    }

    carregarProdutos();
  </script>
</body>
