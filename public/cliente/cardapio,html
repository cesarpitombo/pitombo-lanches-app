<body>
  <header>
    <h1>üçü Card√°pio ‚Äî Pitombo Lanches</h1>
    <nav>
      <a class="btn" href="/">In√≠cio</a>
      <a class="btn" href="/carrinho">Carrinho üõí</a>
    </nav>
  </header>

  <div id="grid"></div>

  <script>
    const CART_KEY = 'pitombo_cart';

    function getCart(){
      try{ return JSON.parse(localStorage.getItem(CART_KEY) || '[]'); }catch(_){ return []; }
    }
    function setCart(list){
      localStorage.setItem(CART_KEY, JSON.stringify(list));
    }
    function addToCart(item){
      const cart = getCart();
      const idx = cart.findIndex(x => x.id === item.id);
      if (idx >= 0){ cart[idx].qtd += 1; } else { cart.push({...item, qtd: 1}); }
      setCart(cart);
      alert(`${item.nome} adicionado!`);
    }
    function money(v){ return `R$ ${Number(v).toFixed(2).replace('.',',')}`; }

    async function loadMenu(){
      const res = await fetch('/api/menu');
      if(!res.ok) throw new Error('Falha ao carregar menu');
      return res.json();
    }

    function card(item){
      return `
        <div class="card">
          <div class="thumb">${item.imagem ? `<img src="${item.imagem}" alt="${item.nome}">` : 'sem imagem'}</div>
          <p class="name">${item.nome}</p>
          <p class="price">${money(item.preco)}</p>
          <button onclick='addToCart(${JSON.stringify(item)})'>Adicionar</button>
        </div>
      `;
    }

    (async () => {
      try{
        const data = await loadMenu();
        const html = data.map(card).join('');
        document.getElementById('grid').innerHTML = html;
      }catch(e){
        document.getElementById('grid').innerHTML = 'N√£o foi poss√≠vel carregar o card√°pio.';
        console.error(e);
      }
    })();
  </script>
</body>
