<body>
  <header>
    <div class="title">üçî Card√°pio Pitombo Lanches</div>
    <div class="actions">
      <a href="/">In√≠cio</a>
      <a href="/carrinho">üõí Carrinho</a>
    </div>
  </header>

  <div class="muted" style="padding: 8px 20px;">Itens carregados do menu.json</div>
  <section id="lista" class="grid"></section>

  <script>
    // util
    const money = (v) => v.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' });

    // estado carrinho no localStorage
    const CART_KEY = 'pitombo_cart';
    const getCart = () => JSON.parse(localStorage.getItem(CART_KEY) || '[]');
    const setCart = (c) => localStorage.setItem(CART_KEY, JSON.stringify(c));

    function addToCart(item) {
      const cart = getCart();
      const idx = cart.findIndex(i => i.id === item.id);
      if (idx >= 0) cart[idx].qtd += 1;
      else cart.push({ id: item.id, nome: item.nome, preco: item.preco, qtd: 1 });
      setCart(cart);
      alert(`Adicionado: ${item.nome}`);
    }

    async function loadMenu() {
      const el = document.getElementById('lista');
      el.innerHTML = 'Carregando...';
      try {
        const r = await fetch('/api/menu');
        const data = await r.json();
        el.innerHTML = '';

        data.forEach(item => {
          const card = document.createElement('div');
          card.className = 'card';
          card.innerHTML = `
            <div class="nm">${item.nome}</div>
            <div class="pr">${money(Number(item.preco || 0))}</div>
            <button>Adicionar</button>
          `;
          card.querySelector('button').onclick = () => addToCart(item);
          el.appendChild(card);
        });
      } catch (e) {
        el.innerHTML = 'Erro ao carregar card√°pio.';
        console.error(e);
      }
    }

    loadMenu();
  </script>
</body>
</html>
