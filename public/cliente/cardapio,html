  <style>
    body { font-family: Arial; margin: 20px; }
    h1 { text-align: center; }
    .produtos { display: flex; flex-wrap: wrap; justify-content: center; }
    .card {
      border: 1px solid #ccc;
      border-radius: 10px;
      padding: 10px;
      margin: 10px;
      text-align: center;
      width: 150px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }
